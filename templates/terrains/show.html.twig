        document.getElementById("container").appendChild(div);

        jsondata.forEach(function(liste){
            //console.log(liste.Field.Name);
            if(liste.Field.Name === terrain){
                if(liste.Phase.id === 1){
                    u11.push(liste);
                }

                if(liste.Phase.id === 5){
                    u13.push(liste);
                }

            };
        });

        afficheMatch(u13,terrain,div);
        afficheMatch(u11,terrain,div);
    });
});

