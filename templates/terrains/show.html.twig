{% block javascript %}

//Url de l'api : /api/fields

var url = "http://localhost:8000/api/matchs"
var terrain = document.getElementById("nomTerrain").textContent;
console.log(terrain);

//affiche nom d'equipe, score, poule, phase.

function afficheMatch(match, terrain, div){
    let titre = false;
    match.forEach(function(m){
        if(m.Field.Name === terrain){
            while(titre === false){
                let br = document.createElement("br");
                div.appendChild(br);

                let tr = document.createElement("tr");
                tr.innerText= m.Phase.Name;
                div.appendChild(tr);

                titre = true;
            }

            tr = document.createElement("tr");
            tr.innerText = "Poule "+m.Poule.Name;
            div.appendChild(tr);

            let td = document.createElement("td");
            td.innerText = m.TeamA.Name;
            tr.appendChild(td);

            td = document.createElement("td");
            td.innerText = "/";
            tr.appendChild(td);

            td = document.createElement("td");
            td.innerText = m.TeamB.Name;
            tr.appendChild(td);

            td = document.createElement("td");
            td.innerText = "//";
            tr.appendChild(td);

            if (!match.ScoreA){
                td = document.createElement("td");
                td.innerText = "0"
                tr.appendChild(td);
            }else{
                td = document.createElement("td");
                td.innerText = m.ScoreA
                tr.appendChild(td);
            }

            td = document.createElement("td");
            td.innerText =":";
            tr.appendChild(td);

            if (!match.ScoreB){
                td = document.createElement("td");
                td.innerText = "0"
                tr.appendChild(td);
            }else{
                td = document.createElement("td");
                td.innerText = m.ScoreB
                tr.appendChild(td);
            }
        };
    });
};

