{% block javascript %}

//Url de l'api : /api/fields

var url = "http://localhost:8000/api/fields";

fetch(url).then(function(resultas){
    console.log(resultas);

    resultas.json().then(function(object){
        //console.log(object);
        data = object.data
        console.log(data)
        var FinLien= 1;
        let div = document.createElement("div");
        document.getElementById("container").appendChild(div);

        data.forEach(function(affiche){

            let tr = document.createElement("tr");
            div.appendChild(tr);

            let td =document.createElement("td");
            td.innerText= affiche.Name;
            tr.appendChild(td);

            let a = document.createElement("a");
            a.innerText= 'voir les matchs';
            a.setAttribute("href", "//localhost:8000/terrain/"+FinLien);
            td.appendChild(a);
            FinLien++;
        });

    });
});

