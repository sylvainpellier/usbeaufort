{% block javascript %}

    fetch("//localhost:8000/api/teams").then((data)=>{
        console.log(data);
       data.json().then((jsonData)=>{
           console.log(jsonData);
           jsonData.forEach((team)=>{
               console.log(team);
               let tr = document.createElement("tr");
               let td = document.createElement("td");

               let a = document.createElement("a");
               a.innerText = team.Name;
               a.setAttribute("href","/equipe/"+team.id);
               td.appendChild(a);
               tr.appendChild(td)
               document.getElementById(team.Category.Name).appendChild(tr);
           });
       });
    });

{% endblock %}