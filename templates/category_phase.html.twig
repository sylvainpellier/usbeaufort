                    tr.appendChild(td);

                    td = document.createElement("td");
                    td.innerHTML = team.nul;
                    tr.appendChild(td);

                    td = document.createElement("td");
                    td.innerHTML = team.defaite;
                    tr.appendChild(td);
                    }


                });
let btn = document.createElement("a");
                    div.append(btn);
                    btn.innerText = "voir tous les matchs";
                    btn.setAttribute("href","//localhost:8000/matchs/1/phase/{{ phase.id }}/groupe/"+namePoule);
                    btn.classList.add("btn","btn-secondary","float-end","btn-sm");
        };
        }
    });
});


