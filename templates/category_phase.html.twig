                    tr.appendChild(td);

                    td = document.createElement("td");
                    td.innerHTML= team.but_contre;
                    tr.appendChild(td);


                    td = document.createElement("td");
                    td.innerHTML= team.but_pour;
                    tr.appendChild(td);

                    

                    td = document.createElement("td");
