{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}


{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form pt-5"  action="{{ path('login') }}" method="post">

        <div class="form-group mt-5">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="_username"  value="{{ last_username }}" aria-describedby="usernameHelp" placeholder="Entrez votre mail">
        </div>

        <div class="form-group mt-3 mb-3">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password"  name="_password"  aria-describedby="passwordHelp" placeholder="Entrez votre mot de passe">
        </div>

        <input type="hidden" name="_target_path" value="/admin"/>

        <button class="btn w-100 btn-primary" type="submit">Se connecter</button>
    </form>
{% endblock %}