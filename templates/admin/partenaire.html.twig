{% extends 'base.html.twig' %}

{% block title %}Partenaires - {% endblock %}

{% block body %}

    <div class="example-wrapper">

        {% if partenaire is defined %}
            <div class="mb-5">

        <h3>Modifier le partenaire {{ partenaire.Name }}</h3>

        {{ form(form) }}
            </div>
        {% endif %}

        <h3 class="">Liste des partenaires </h3>

        <table class="table table-striped">
            <tbody>
            {% for partenaire in partenaires %}
            <tr>
                <td><img src="/img/{{ partenaire.logo }}"></td>
                <td>{{ partenaire.name }}</td>
                <td><a href="{{ path("app_admin_partenaire_edit",{id:partenaire.id}) }}" class="btn btn-primary">modifier</a></td>
                <td><a href="{{ path("app_admin_partenaire_delete",{id:partenaire.id}) }}" class="btn btn-danger">supprimer</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if formEmpty is defined %}
        <hr class="mt-5 mb-5" />
        <h3 class="">Ajouter un partenaire </h3>
        {{ form(formEmpty) }}
        {% endif %}



    </div>
{% endblock %}

{% block secondNav %}
    {% include "admin/adminMenu.html.twig" %}
{% endblock %}